<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="68dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingBottom="30dp"
    android:background="#FFFFFFFF">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/mainTextView1"
            android:gravity="left|center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="88dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                android:text="授权码"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/mainTextView1"
            android:paddingTop="55dp"
            android:id="@+id/mainLinearLayout1">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="left|center"
                    android:paddingRight="11dp"
                    android:text="设备ID"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/phoneSign"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:editable="false"
                    android:gravity="left|center"
                    android:textCursorDrawable="@drawable/gb"
                    android:textSize="19sp"
                    tools:ignore="Deprecated" />

            </LinearLayout>

            <View
                android:background="?android:attr/dividerVertical"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="left|center"
                    android:paddingRight="11dp"
                    android:text="授权码"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/authorization"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#00000000"
                    android:ems="10"
                    android:gravity="left|center"
                    android:hint="请填写授权码"
                    android:textCursorDrawable="@drawable/gb"
                    android:textSize="19sp" />

            </LinearLayout>

            <View
                android:background="?android:attr/dividerVertical"
                android:layout_height="1dp"
                android:layout_width="match_parent"/>

            <Button
                android:id="@+id/enter"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sel"
                android:text="进入"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />
            <Button
                android:id="@+id/exit"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/sel2"
                android:text="退出"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_below="@id/mainLinearLayout1"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/mainTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF59BCEF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FF59BCEF" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/mainTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/getAuthorization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="获取授权码"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FF59BCEF" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

